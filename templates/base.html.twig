<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}
            {{ service_name }}
        {% endblock %}
    </title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/app_css.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="shortcut icon" href="{{ asset('images/favicon.png') }}">
    {% endblock %}
</head>
<body>
<div class="content">
    <nav class="navbar navbar-expand-lg navbar-default">
        <div class="container">
            <a class="navbar-brand" href="{{ path('home') }}">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item {% if current_page == 'home' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('home') }}">{% trans %}menu_home{% endtrans %}</a>
                    </li>
                    <li class="nav-item {% if current_page == 'manual' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('manual') }}">{% trans %}menu_manual{% endtrans %}</a>
                    </li>
                    <li class="nav-item {% if current_page == 'open_data' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('open_data') }}">{% trans %}menu_open_data{% endtrans %}</a>
                    </li>
                    <li class="nav-item {% if current_page == 'open_source' %}active{% endif %}">
                        <a class="nav-link" href="{{ path('open_source') }}">{% trans %}menu_open_source{% endtrans %}</a>
                    </li>
                    <li>
                        <div>
                            {% if translated_routes is defined %}
                                {% for translated_route in translated_routes %}
                                    <a {% if translated_route.active is defined %}class="active" {% endif %}href="{{ translated_route.route }}">{{ translated_route.locale }}</a>
                                {% endfor %}
                            {% elseif error is defined %}
                                {% set locales_list = locales|split('|') %}
                                {% for locale in locales_list %}
                                    <a {% if locale == app.request.locale %}class="active" {% endif %}href="{{ path(error, { '_locale': locale }) }}">{{ locale }}</a>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {% block body %}
    {% endblock %}
</div>

{% include "footer.html.twig" %}

{% block javascripts %}
    <script src="{{ asset('build/app.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
</body>
</html>
