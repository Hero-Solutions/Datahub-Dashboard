<!-- use class="active" for proper background for active buttons-->
<div class="left-menu">
    <div class="btn-group-vertical">
        {% set loopI = 1 %}

        {% for category_label, category in left_menu %}
            <p class="left-menu-level-one">{{ category_label }}</p>
            {% set url_name = category_label|url_encode|replace({'%20': '+'}) %}

            {%  for menu_label, menu in category %}
                {% set url_sub_name = menu_label|url_encode|replace({'%20': '+'}) %}
                {% set loopI = loopI + 1 %}
                <div id="accordion{{ loopI }}">
                    <div class="card">
                        <div class="card-header" id="heading{{ loopI }}">
                            <button class="btn btn-default not-rounded menu {% if category_label == active_category and menu_label == active_menu %}menu-active{% endif %}" data-toggle="collapse"
                                    data-target="#collapse{{ loopI }}" aria-expanded="{% if category_label == active_category and menu_label == active_menu %}true{% else %}false{% endif %}" aria-controls="collapse{{ loopI }}">{{ menu_label }}<span class="caret"></span></button>
                        </div>

                        <div id="collapse{{ loopI }}" class="collapse {% if category_label == active_category and menu_label == active_menu %}show{% endif %}" aria-labelledby="heading{{ loopI }}" data-parent="#accordion{{ loopI }}">
                            <div class="card-body">
                                <div class="btn-group-vertical collapse collapsed-buttons">

                                    {% for question, call in menu %}
                                        {% set url_sub_sub_name = question|url_encode|replace({'%20': '+'}) %}
                                        <a href="{{ route ~ "&category=" ~ url_name ~ "&menu=" ~ url_sub_name ~ "&question=" ~ url_sub_sub_name }}"
                                           class="btn btn-default not-rounded collapsed-button question {% if category_label == active_category and menu_label == active_menu and question == active_question %}question-active{% endif %}">{{ question }}</a>
                                    {% endfor %}

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            {% endfor %}

        {% endfor %}

    </div>
</div>
