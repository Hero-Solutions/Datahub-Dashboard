<!-- use class="active" for proper background for active buttons-->

<button type="button" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle" data-bs-target="#left-menu-collapse">
    <i class="fa fa-bars"></i>
    {% trans %}choose_report{% endtrans %}
</button>

<div id="left-menu-collapse" class="left-menu collapse" aria-expanded="false">
    {% set index = 1 %}

    {% for aspect_name, aspect in left_menu %}
        {% set aspect_url = aspect_name|lower %}
        {% set is_active_aspect = (aspect_url == active_aspect) ? 1 : 0 %}

        <p class="left-menu-level-one">{{ aspect.label|trans }}</p>

        {% for parameter_name, parameter in aspect.parameters %}
            {% set is_active_parameter = (is_active_aspect and parameter.url == active_parameter) ? 1 : 0 %}

            {% set index = index + 1 %}
            <div id="accordion{{ index }}">
                <div class="card">
                    <div class="card-header" id="heading{{ index }}">
                        <button class="btn btn-default not-rounded parameter {% if is_active_parameter %}parameter-active{% endif %}"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapse{{ index }}"
                                aria-expanded="{% if is_active_parameter %}true{% else %}false{% endif %}"
                                aria-controls="collapse{{ index }}">
                            <span class="caret"></span>{{ parameter.label|trans }}
                        </button>
                    </div>

                    <div id="collapse{{ index }}" class="collapse {% if is_active_parameter %}show{% endif %}"
                         aria-labelledby="heading{{ index }}" data-bs-parent="#accordion{{ index }}">
                        <div class="card-body">
                            <div class="btn-group-vertical collapse collapsed-buttons">

                                {% for question_name, question in parameter.questions %}
                                    {% set is_active_question = (is_active_parameter and question.url == active_question) ? 1 : 0 %}

                                    <a href="{{ route ~ "/" ~ aspect_url ~ "/" ~ parameter.url ~ "/" ~ question.url }}"
                                       class="btn btn-default not-rounded collapsed-button question {% if is_active_question %}question-active{% endif %}">
                                        {{ question.label|trans }}
                                    </a>
                                {% endfor %}

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>
